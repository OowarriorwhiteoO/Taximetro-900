<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/carcasa_gris"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Panel Lateral Izquierdo con LEDs -->
    <LinearLayout
        android:id="@+id/panelLeds"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="12dp">

        <!-- LED Rojo -->
        <View
            android:id="@+id/ledRojo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/led_circle" />

        <!-- LED Verde -->
        <View
            android:id="@+id/ledVerde"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/led_circle" />

        <!-- LED Azul -->
        <View
            android:id="@+id/ledAzul"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/led_circle" />
    </LinearLayout>

    <!-- Pantalla LCD Central -->
    <RelativeLayout
        android:id="@+id/pantallaLCD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/panelLeds"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="80dp"
        android:background="@color/lcd_negro"
        android:padding="12dp">

        <!-- Top Bar: Fecha, Hora y Alerta de Velocidad -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="27/12/2025"
                android:textColor="@color/texto_cyan"
                android:textSize="14sp"
                android:fontFamily="monospace" />

            <!-- Alerta de Exceso de Velocidad (intermitente) -->
            <TextView
                android:id="@+id/tvAlertaVelocidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXCESO VELO"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:visibility="gone"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:08:00"
                android:textColor="@color/texto_cyan"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Zona Principal: Semáforo y Precio -->
        <LinearLayout
            android:id="@+id/zonaPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <!-- Semáforo Digital -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingEnd="24dp">

                <View
                    android:id="@+id/semaforoRojo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/led_circle" />

                <View
                    android:id="@+id/semaforoVerde"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/led_circle" />
            </LinearLayout>

            <!-- Símbolo $ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="@color/texto_cyan"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:paddingEnd="8dp" />

            <!-- Precio Grande -->
            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/texto_blanco"
                android:textSize="72sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Mensaje Central para Estado INACTIVO -->
        <TextView
            android:id="@+id/tvMensajeInactivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TAXIMETRO\nINACTIVO"
            android:textColor="@color/texto_cyan"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Zona Inferior: Tabla de Datos -->
        <LinearLayout
            android:id="@+id/zonaDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <!-- Columna Izquierda: Tarifas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Band"
                    android:textColor="@color/texto_cyan"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/tvBajadaBandera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$450"
                    android:textColor="@color/texto_blanco"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Parc"
                    android:textColor="@color/texto_cyan"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/tvCostoParc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$190"
                    android:textColor="@color/texto_blanco"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distancia"
                    android:textColor="@color/texto_cyan"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tvDistanciaRecorrida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 m"
                    android:textColor="@color/texto_blanco"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <!-- Columna Derecha: Estado -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo detenido"
                    android:textColor="@color/texto_cyan"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/tvTiempoDetenido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/texto_blanco"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Velocidad"
                    android:textColor="@color/texto_cyan"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/tvVelocidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 km/h"
                    android:textColor="@color/texto_blanco"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </LinearLayout>

        <!-- Etiquetas de Botones (sobre pantalla) -->
        <LinearLayout
            android:id="@+id/etiquetasBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-64dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inicio"
                android:textColor="@color/texto_cyan"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="s/Tiempo"
                android:textColor="@color/texto_cyan"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fin/Imp"
                android:textColor="@color/texto_cyan"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menú"
                android:textColor="@color/texto_cyan"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="monospace" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Botones Físicos en la Parte Inferior -->
    <LinearLayout
        android:id="@+id/panelBotones"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/boton_verde"
            android:text="Inicio"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnControl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/boton_verde"
            android:text="Control"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/boton_verde"
            android:text="Activar"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_verde"
            android:text="Menú"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Menú Superpuesto (inicialmente oculto) -->
    <RelativeLayout
        android:id="@+id/menuSuperpuesto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="MENÚ\n\n[Opciones del Taxímetro]"
            android:textColor="@color/texto_cyan"
            android:textSize="24sp"
            android:gravity="center"
            android:fontFamily="monospace" />
    </RelativeLayout>

</RelativeLayout>
